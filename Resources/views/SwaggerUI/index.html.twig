{% extends "IdeahqSwaggerUIBundle::layout.html.twig" %}

{% block ideahq_swagger_ui_favicons %}

    <link rel="icon" type="image/png" href="{{ webpack_asset('@root/vendor/swagger-api/swagger-ui/dist/favicon-32x32.png') }}" sizes='32x32' />
    <link rel="icon" type="image/png" href="{{ webpack_asset('@root/vendor/swagger-api/swagger-ui/dist/favicon-16x16.png') }}" sizes='16x16' />
{% endblock %}

{% block ideahq_swagger_ui_stylesheets %}
    <link href="{{ webpack_asset('@root/vendor/swagger-api/swagger-ui/dist/swagger-ui.css') }}" rel='stylesheet' type='text/css'/>
{% endblock %}

{% block ideahq_swagger_ui_javascripts %}
    {% webpack named js 'node-static' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% end_webpack %}
    {% webpack js
        '@IdeahqSwaggerUIBundle/Resources/views/SwaggerUI/index.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% end_webpack %}

    <script type="text/javascript">
    window.onload = function() {
      // Build a system
      const ui = window.neighbourly.SwaggerUIBundle({
        url: {{ url|json_encode|raw }},
        validatorUrl: {{ validator_url|json_encode|raw }},
        operationsSorter: {{ operations_sorter|json_encode|raw }},
        dom_id: '#swagger-ui',
        presets: [
          window.neighbourly.SwaggerUIBundle.presets.apis,
          window.neighbourly.SwaggerUIStandalonePreset
        ],
        plugins: [
          window.neighbourly.SwaggerUIBundle.plugins.DownloadUrl
        ],
        layout: "StandaloneLayout"
      })

      window.ui = ui
    }
    </script>
{% endblock %}
