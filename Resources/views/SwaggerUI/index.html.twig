{% extends "IdeahqSwaggerUIBundle::layout.html.twig" %}

{% block ideahq_swagger_ui_favicons %}
    {% image '%kernel.root_dir%/../vendor/swagger-api/swagger-ui/dist/favicon-32x32.png' %}
        <link rel="icon" type="image/png" href="{{ asset_url }}" sizes='32x32' />
    {% endimage %}
    {% image '%kernel.root_dir%/../vendor/swagger-api/swagger-ui/dist/favicon-16x16.png' %}
        <link rel="icon" type="image/png" href="{{ asset_url }}" sizes='16x16' />
    {% endimage %}
{% endblock %}

{% block ideahq_swagger_ui_stylesheets %}
    {% stylesheets
        '%kernel.root_dir%/../vendor/swagger-api/swagger-ui/dist/swagger-ui.css'
    %}
        <link href="{{ asset_url }}" rel='stylesheet' type='text/css'/>
    {% endstylesheets %}
{% endblock %}

{% block ideahq_swagger_ui_javascripts %}
    {% javascripts
        '%kernel.root_dir%/../vendor/swagger-api/swagger-ui/dist/swagger-ui-bundle.js'
        '%kernel.root_dir%/../vendor/swagger-api/swagger-ui/dist/swagger-ui-standalone-preset.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
    window.onload = function() {
      // Build a system
      const ui = SwaggerUIBundle({
        url: {{ url|json_encode|raw }},
        validatorUrl: {{ validator_url|json_encode|raw }},
        operationsSorter: {{ operations_sorter|json_encode|raw }},
        dom_id: '#swagger-ui',
        presets: [
          SwaggerUIBundle.presets.apis,
          SwaggerUIStandalonePreset
        ],
        plugins: [
          SwaggerUIBundle.plugins.DownloadUrl
        ],
        layout: "StandaloneLayout"
      })

      window.ui = ui
    }
    </script>
{% endblock %}
